<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
			<block class="Solutionexcel\AddThis\Block\Index" name="addthis_script" ifconfig="solutionexcel_addthis/general/enable" template="Solutionexcel_AddThis::script.phtml"/>       
		</referenceBlock>
		<referenceContainer name="footer">
			<block class="Solutionexcel\AddThis\Block\Index" name="addthis_follow" ifconfig="solutionexcel_addthis/general/follow_buttons" template="Solutionexcel_AddThis::follow.phtml" />      
		</referenceContainer>
	</body>
</page>

	